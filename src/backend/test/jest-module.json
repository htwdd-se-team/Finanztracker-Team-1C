{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*\\.module-spec\\.ts$",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.enum.ts",
    "!src/**/*.config.ts",
    "!src/**/index.ts",
    "!src/main.ts",
    "!src/**/__tests__/**",
    "!src/**/__mocks__/**"
  ],
  "coverageDirectory": "coverage/module",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/dist/",
    "\\.d\\.ts$"
  ],
  "coverageReporters": ["text", "lcov", "html", "json-summary"],
  "coverageProvider": "v8"
}

